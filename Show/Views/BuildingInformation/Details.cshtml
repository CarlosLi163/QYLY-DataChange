@{
    ViewBag.Title = "详情";
}
@model BuildingInformationDetailViewModel
<!-- banner start -->
<div class="d_banner">
    <img src="~/Images/banner01.jpg" />
</div>
<!-- banner end -->
<!-- content start -->
<div class="show_cnt w1200 m0a clearfix">
    <div class="asd_nav fl">
        <h4><img src="~/Images/news_tit.png"></h4>
        <ul class="first_nav">
            <li>
                <ul class="senc_nav">
                    @foreach (var item in Model.ArticleType)
                    {
                        if (item.Title==(ViewBag.Name) as string)
                        {
                            <li class="on"><a href="@Url.Action("Index", new { typeID =item.ID})">@item.Title</a></li>
                        }
                        else
                        {
                            <li><a href="@Url.Action("Index", new { typeID =item.ID}) ">@item.Title</a></li>
                        }
                    }
                </ul>
            </li>
        </ul>
    </div>
    <div class="floor_cnt fr">
        <div class="titbox clearfix">
            <h4 class="fl">@ViewBag.Name</h4>
            <div class="fr mbx_nav">
                你的当前位置：
                <a href="~/Home/Index">首页 ></a>
                <a href="~/BuildingInformation/Index">楼宇资讯 ></a>
                <a href="javascript:;" class="now">@ViewBag.Name</a>
            </div>
        </div>
        <div class="floor_info2">
            <h3 class="tc">@Model.Article.Title</h3>
            <div class="tc time">时间：@(((DateTime)Model.Article.PublishTime).ToString("yyyy-MM-dd"))</div>
            <div>@Html.Raw(Model.Article.Content)</div>
        </div>
    </div>
</div>
<!-- content end -->
